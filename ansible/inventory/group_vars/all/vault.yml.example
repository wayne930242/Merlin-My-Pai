# Ansible Vault 範例
# 複製此檔案為 vault.yml 並填入你的值
# 然後執行: ansible-vault encrypt inventory/group_vars/all/vault.yml

# === Telegram Bot（可選，與 Discord 至少選一）===
telegram_bot_token: "YOUR_TELEGRAM_BOT_TOKEN"
telegram_allowed_user_ids: "YOUR_TELEGRAM_USER_ID"

# === Discord Bot（可選，與 Telegram 至少選一）===
discord_bot_token: "YOUR_DISCORD_BOT_TOKEN"
discord_client_id: "YOUR_DISCORD_CLIENT_ID"
discord_allowed_user_ids: "YOUR_DISCORD_USER_ID"

# === VPS 設定 ===
vault_server_ip: "YOUR_VPS_IP"
pai_agent_user: "pai"
vault_timezone: "Asia/Taipei"

# === 本地 SSH Key（用於初始化 VPS）===
# init playbooks 使用本地 key 連接 root（vault key 還沒生效時）
vault_local_ssh_key_path: "~/.ssh/id_ed25519"

# === 網站設定 ===
vault_site_domain: "YOUR_DOMAIN"
# Web 前端域名（用於 API/WS URL）
vault_web_domain: "pai.example.com"
# API 認證金鑰（產生方式: openssl rand -hex 32）
vault_pai_api_key: "YOUR_API_KEY"

# === SSH Key（用於 Ansible 部署）===
# 產生方式: ssh-keygen -t ed25519 -C "pai-agent"
pai_agent_ssh_private_key: |
  -----BEGIN OPENSSH PRIVATE KEY-----
  YOUR_PRIVATE_KEY_HERE
  -----END OPENSSH PRIVATE KEY-----
pai_agent_ssh_public_key: "ssh-ed25519 AAAA... pai-agent"

# === GitHub CLI（用於 Merlin workspace）===
# 產生方式: https://github.com/settings/tokens
# 需要 scopes: repo, read:org, gist
github_token: "ghp_YOUR_GITHUB_TOKEN"
github_username: "YOUR_GITHUB_USERNAME"

# === Vultr API（可選，用於自動建立 VPS）===
vultr_api_key: "YOUR_VULTR_API_KEY"

# === Mutagen 同步（可選）===
# 啟用後 deploy-claude.yml 會跳過 mutagen 同步的目錄
vault_use_mutagen_sync: true

# === Bot 長期記憶（可選）===
vault_enable_memory: true
# 記憶萃取模型：gemini（推薦，便宜）或 haiku
vault_memory_provider: "gemini"
# Gemini API Key（從 https://aistudio.google.com/apikey 取得）
# 用於記憶萃取和語音轉錄
vault_gemini_api_key: "YOUR_GEMINI_API_KEY"

# === 語音轉錄（可選）===
# 使用 Gemini 將語音訊息轉為文字，再送給 Claude 處理
vault_enable_transcription: true

# === Fabric AI（可選）===
vault_enable_fabric: false
# Anthropic API Key（用於 Fabric AI）
# 取得方式: https://console.anthropic.com/settings/keys
vault_anthropic_api_key: "sk-ant-api03-YOUR_ANTHROPIC_API_KEY"

# === Google OAuth2（用於 Calendar, Drive, Gmail, Contacts）===
# 取得方式:
#   1. 前往 https://console.cloud.google.com/
#   2. 建立專案 → 啟用 API（Calendar, Drive, Gmail, People）
#   3. 建立 OAuth 2.0 憑證（桌面應用程式）
#   4. 執行 ./scripts/google-auth.sh 取得 refresh token
vault_google_client_id: "YOUR_CLIENT_ID.apps.googleusercontent.com"
vault_google_client_secret: "YOUR_CLIENT_SECRET"
vault_google_refresh_token: "YOUR_REFRESH_TOKEN"

# === Garmin Connect（可選，用於健康數據追蹤）===
# 用於取得步數、睡眠、心率等健康數據
vault_garmin_email: "YOUR_GARMIN_EMAIL"
vault_garmin_password: "YOUR_GARMIN_PASSWORD"

# === OpenAI API（用於 Agentic RAG embedding）===
# 取得方式: https://platform.openai.com/api-keys
vault_openai_api_key: "sk-YOUR_OPENAI_API_KEY"
