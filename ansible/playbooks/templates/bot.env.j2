# PAI Bot Configuration - Generated by Ansible

# System
TIMEZONE={{ vault_timezone | default('Asia/Taipei') }}

# Telegram
TELEGRAM_BOT_TOKEN={{ telegram_bot_token | default('') }}
TELEGRAM_ALLOWED_USER_IDS={{ telegram_allowed_user_ids | default('') }}

# Discord
DISCORD_BOT_TOKEN={{ discord_bot_token | default('') }}
DISCORD_ALLOWED_USER_IDS={{ discord_allowed_user_ids | default('') }}

# Database
DATABASE_PATH=./data/pai.db

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_REQUESTS=20
RATE_LIMIT_WINDOW=60000

# Memory (optional)
ENABLE_MEMORY={{ vault_enable_memory | default(false) | lower }}
MEMORY_PROVIDER={{ vault_memory_provider | default('gemini') }}
GEMINI_API_KEY={{ vault_gemini_api_key | default('') }}
ANTHROPIC_API_KEY={{ vault_anthropic_api_key | default('') }}

# Transcription (optional)
ENABLE_TRANSCRIPTION={{ vault_enable_transcription | default(false) | lower }}

# Google OAuth2
GOOGLE_CLIENT_ID={{ vault_google_client_id }}
GOOGLE_CLIENT_SECRET={{ vault_google_client_secret }}
GOOGLE_REFRESH_TOKEN={{ vault_google_refresh_token }}

# Garmin Connect (optional)
GARMIN_EMAIL={{ vault_garmin_email | default('') }}
GARMIN_PASSWORD={{ vault_garmin_password | default('') }}

# YouTube (for music playback)
YOUTUBE_API_KEY={{ vault_youtube_api_key | default('') }}

# Web API Authentication
PAI_API_KEY={{ vault_pai_api_key | default('') }}
