# PAI Bot Configuration - Generated by Ansible

# Telegram
TELEGRAM_BOT_TOKEN={{ telegram_bot_token }}
TELEGRAM_ALLOWED_USER_IDS={{ telegram_allowed_user_ids }}

# Database
DATABASE_PATH=./data/pai.db

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_REQUESTS=20
RATE_LIMIT_WINDOW=60000

# Memory (optional)
ENABLE_MEMORY={{ vault_enable_memory | default(false) | lower }}
ANTHROPIC_API_KEY={{ vault_anthropic_api_key | default('') }}

# Google OAuth2
GOOGLE_CLIENT_ID={{ vault_google_client_id }}
GOOGLE_CLIENT_SECRET={{ vault_google_client_secret }}
GOOGLE_REFRESH_TOKEN={{ vault_google_refresh_token }}
